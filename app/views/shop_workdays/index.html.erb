<p id="notice"><%= notice %></p>

<h1>Shop Workdays</h1>

<table>
  <thead>
    <tr>
      <th>Shop</th>
      <th>Day</th>
      <th>Start time</th>
      <th>Close time</th>
      <th>Open</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shop_workdays.each do |shop_workday| %>
      <tr>
        <td><%= shop_workday.shop %></td>
        <td><%= shop_workday.day %></td>
        <td><%= shop_workday.start_time %></td>
        <td><%= shop_workday.close_time %></td>
        <td><%= shop_workday.open %></td>
        <td><%= link_to 'Show', shop_workday %></td>
        <td><%= link_to 'Edit', edit_shop_workday_path(shop_workday) %></td>
        <td><%= link_to 'Destroy', shop_workday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

