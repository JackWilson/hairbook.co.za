<p id="notice"><%= notice %></p>

<h1>Calendar Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Booking</th>
      <th>Shop calendar</th>
      <th>Occupy chair</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calendar_bookings.each do |calendar_booking| %>
      <tr>
        <td><%= calendar_booking.booking %></td>
        <td><%= calendar_booking.shop_calendar %></td>
        <td><%= calendar_booking.occupy_chair %></td>
        <td><%= link_to 'Show', calendar_booking %></td>
        <td><%= link_to 'Edit', edit_calendar_booking_path(calendar_booking) %></td>
        <td><%= link_to 'Destroy', calendar_booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

